<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="128dp"
        android:text="密碼修改"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="50dp"
        android:text="FB認證"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="50dp"
        android:text="Email認證"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="50dp"
        android:text="手機認證"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/pwd_revise_btn"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginStart="128dp"
        android:text="修改"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <Button
        android:id="@+id/FBAuth_btn"
        android:layout_width="59dp"
        android:layout_height="40dp"
        android:layout_marginStart="72dp"
        android:text="認證"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/fb_check_image"
        app:layout_constraintStart_toEndOf="@+id/fb_check_image"
        app:layout_constraintTop_toTopOf="@+id/fb_check_image"
        app:layout_constraintVertical_bias="0.47" />

    <Button
        android:id="@+id/EmailAuth_btn"
        android:layout_width="59dp"
        android:layout_height="40dp"
        android:layout_marginStart="68dp"
        android:text="認證"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/email_check_image"
        app:layout_constraintStart_toEndOf="@+id/email_check_image"
        app:layout_constraintTop_toTopOf="@+id/email_check_image"
        app:layout_constraintVertical_bias="0.47" />

    <Button
        android:id="@+id/PhoneAuth_btn"
        android:layout_width="59dp"
        android:layout_height="40dp"
        android:layout_marginStart="72dp"
        android:text="認證"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/phone_check_image"
        app:layout_constraintStart_toEndOf="@+id/phone_check_image"
        app:layout_constraintTop_toTopOf="@+id/phone_check_image"
        app:layout_constraintVertical_bias="0.56" />

    <ImageView
        android:id="@+id/fb_check_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/checkbox_off_background" />

    <ImageView
        android:id="@+id/phone_check_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/checkbox_off_background" />

    <ImageView
        android:id="@+id/email_check_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.393"
        app:srcCompat="@android:drawable/checkbox_off_background" />

</androidx.constraintlayout.widget.ConstraintLayout>
